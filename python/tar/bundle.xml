<assembly>
	<id>bundle</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

  <fileSets>
    <fileSet>
      <includes>
        <include>flexiant/**/*.py</include>
      </includes>
      <excludes>
        <exclude>**/*.pyc</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>suds/**/*</include>
      </includes>
      <excludes>
        <exclude>**/*.pyc</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>requests/**/*</include>
      </includes>
      <excludes>
        <exclude>**/*.pyc</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
