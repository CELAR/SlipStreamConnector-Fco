<assembly>
	<id>bundle</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

  <fileSets>
    <fileSet>
      <fileMode>555</fileMode>
      <includes>
        <include>bin/fco-run-instance</include>
        <include>flexiant/*.py</include>
        <include>flexiant/packages/*.py</include>        
      </includes>
      <excludes>
        <exclude>**/*.pyc</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>